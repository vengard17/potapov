<script>
document.getElementById("button").addEventListener("click", Hello);

function Hello() {
let name_n = document.getElementsByTagName("input")[0].value;
document.getElementById("name").innerHTML = "Имя:" + name_n;
let surname_n = document.getElementsByTagName("input")[1].value;
document.getElementById("surname").innerHTML = "Фамилия:" + surname_n;
}
</script>
