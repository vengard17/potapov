<body>
   <script>
       var answer = true;
       if (confirm('Доброго времени суток, у данной страницы есть к Вам вопрос Вы готовы ответить?')){
           while (answer)
           {
               let age = prompt ('Сколько Вам лет?','Введите сюда Ваш возраст');
               if (confirm("Ваш возраст -"+age+ "лет?")){
                   alert ("Спасибо, что уделили время")
                   answer = false
               }
           }
       }
    </script>
